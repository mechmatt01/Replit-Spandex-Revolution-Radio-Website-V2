# Firebase Configuration (Required for production)
# Get these from your Firebase project settings
SESSION_SECRET="replace_with_a_secure_random_value"
VITE_FIREBASE_API_KEY="REPLACE_WITH_FIREBASE_API_KEY"
VITE_FIREBASE_APP_ID="REPLACE_WITH_FIREBASE_APP_ID"
VITE_FIREBASE_PROJECT_ID="REPLACE_WITH_FIREBASE_PROJECT_ID"
DATABASE_URL="postgresql://<user>:<password>@<host>/<db>?sslmode=require"
PGDATABASE="<database>"
PGHOST="<host>"
PGPORT="5432"
PGUSER="<user>"
PGPASSWORD="<password>"

GOOGLE_CLIENT_ID="REPLACE_WITH_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="REPLACE_WITH_GOOGLE_CLIENT_SECRET"
SPOTIFY_CLIENT_SECRET="REPLACE_WITH_SPOTIFY_CLIENT_SECRET"
STRIPE_SECRET_KEY="REPLACE_WITH_STRIPE_SECRET_KEY"
VITE_STRIPE_PUBLIC_KEY="REPLACE_WITH_STRIPE_PUBLIC_KEY"

# Server Configuration
PORT=8080
NODE_ENV=production

# Firebase Admin SDK Configuration (for backend)
FIREBASE_PROJECT_ID=spandex-salvation-radio-site
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here
FIREBASE_PRIVATE_KEY=your_firebase_private_key_here

# Optional: Firebase Emulator Setup (for local development only)
VITE_USE_FIREBASE_EMULATORS=false

# Stripe Configuration (for subscriptions)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# reCAPTCHA Configuration
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Weather API Configuration (optional)
VITE_WEATHER_API_KEY=your_weather_api_key_here

# Radio Metadata Configuration
VITE_RADIO_API_URL=https://www.radiotime.com/json/stations

# API Base URL for production
VITE_API_BASE_URL=https://spandex-salvation-radio-site.web.app/api
