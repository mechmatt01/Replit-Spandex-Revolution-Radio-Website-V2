modules = ["nodejs-20", "gcloud"]
[nix]
channel = "stable-25_05"
packages = ["unzip", "python313Packages.firebase-admin", "firebase-tools"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "frontend-dev-server"

[[workflows.workflow]]
name = "frontend-dev-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/client && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 9005
externalPort = 3000

[[ports]]
localPort = 9006
externalPort = 3002

[deployment]
deploymentTarget = "static"
build = ["sh", "-c", "npm install && npm run build"]
publicDir = "dist"
