rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to radio stations for public consumption
    match /radio_stations/{document} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Allow read/write access to admin collection
    match /Admin/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read/write access to users collection
    match /Users/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read/write access to live stats
    match /live_stats/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to chat messages (public chat)
    match /chat_messages/{document} {
      allow read: if true; // Anyone can read chat messages
      allow write: if true; // Anyone can write chat messages (including guests)
    }
    
    // Allow read/write access to chat users (online status)
    match /chat_users/{document} {
      allow read: if true; // Anyone can read online users
      allow write: if true; // Anyone can update their online status (including guests)
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 